    <!-- اسکریپت اصلی برنامه -->
    <script>
        // کلاس اصلی برنامه با معماری پیشرفته
        class IRXApp {
            constructor() {
                this.user = null;
                this.cryptoData = {};
                this.newsItems = [
                    "پروژه IRX توسط تیمی از متخصصان بین‌المللی مورد تحسین قرار گرفت",
                    "همکاری با 5 بانک بزرگ کشور برای ادغام IRX با سیستم بانکی",
                    "رونمایی از کیف پول اختصاصی IRX در هفته آینده",
                    "IRX در لیست 10 پروژه برتر بلاکچین منطقه قرار گرفت"
                ];
                this.isAuthModalOpen = false;
                this.isLoginForm = true;
                this.lastUpdateTime = null;
                this.init();
            }
            
            init() {
                this.init3DBackground();
                this.setupEventListeners();
                this.loadCryptoData();
                this.updateClock();
                this.updateYear();
                setInterval(() => this.updateClock(), 1000);
                setInterval(() => this.addNewsItem(), 30000);
                this.setupSmoothScrolling();
            }
            
            init3DBackground() {
                const container = document.getElementById('threejs-background');
                
                // ایجاد صحنه
                const scene = new THREE.Scene();
                
                // ایجاد دوربین
                const camera = new THREE.PerspectiveCamera(75, window.innerWidth / window.innerHeight, 0.1, 1000);
                camera.position.z = 30;
                
                // ایجاد رندرر
                const renderer = new THREE.WebGLRenderer({ antialias: true, alpha: true });
                renderer.setSize(window.innerWidth, window.innerHeight);
                container.appendChild(renderer.domElement);
                
                // ایجاد اشکال سه‌بعدی
                const geometry = new THREE.IcosahedronGeometry(10, 0);
                const material = new THREE.MeshPhongMaterial({ 
                    color: 0xFFD700,
                    emissive: 0xB8860B,
                    specular: 0x111111,
                    shininess: 30,
                    transparent: true,
                    opacity: 0.7,
                    wireframe: true
                });
                
                const mesh = new THREE.Mesh(geometry, material);
                scene.add(mesh);
                
                // نورپردازی
                const light1 = new THREE.PointLight(0xFFD700, 1, 100);
                light1.position.set(10, 10, 10);
                scene.add(light1);
                
                const light2 = new THREE.PointLight(0xB8860B, 1, 100);
                light2.position.set(-10, -10, -10);
                scene.add(light2);
                
                const ambientLight = new THREE.AmbientLight(0x404040);
                scene.add(ambientLight);
                
                // انیمیشن
                const animate = () => {
                    requestAnimationFrame(animate);
                    
                    mesh.rotation.x += 0.003;
                    mesh.rotation.y += 0.005;
                    
                    renderer.render(scene, camera);
                };
                
                animate();
                
                // رسپانسیو کردن
                window.addEventListener('resize', () => {
                    camera.aspect = window.innerWidth / window.innerHeight;
                    camera.updateProjectionMatrix();
                    renderer.setSize(window.innerWidth, window.innerHeight);
                });
            }
            
            setupEventListeners() {
                // مدیریت منو
                const menuToggle = document.getElementById('menuToggle');
                const mainMenu = document.getElementById('mainMenu');
                
                menuToggle.addEventListener('click', () => {
                    menuToggle.classList.toggle('active');
                    mainMenu.classList.toggle('active');
                });
                
                // بستن منو هنگام کلیک روی آیتم‌ها
                document.querySelectorAll('.main-menu a').forEach(item => {
                    item.addEventListener('click', () => {
                        menuToggle.classList.remove('active');
                        mainMenu.classList.remove('active');
                    });
                });
                
                // مدیریت احراز هویت
                document.getElementById('loginBtn').addEventListener('click', (e) => {
                    e.preventDefault();
                    this.showAuthModal();
                });
                
                document.getElementById('closeAuth').addEventListener('click', () => {
                    this.hideAuthModal();
                });
                
                document.getElementById('authToggleLink').addEventListener('click', (e) => {
                    e.preventDefault();
                    this.toggleAuthForm();
                });
                
                // دکمه بازگشت به بالا
                window.addEventListener('scroll', () => {
                    const backToTop = document.getElementById('backToTop');
                    if (window.pageYOffset > 300) {
                        backToTop.classList.add('visible');
                    } else {
                        backToTop.classList.remove('visible');
                    }
                });
                
                document.getElementById('backToTop').addEventListener('click', () => {
                    window.scrollTo({
                        top: 0,
                        behavior: 'smooth'
                    });
                });
                
                // دکمه بروزرسانی قیمت‌ها
                document.getElementById('refreshPrices').addEventListener('click', () => {
                    this.loadCryptoData();
                });
                
                // مدیریت فرم احراز هویت
                document.getElementById('authForm').addEventListener('submit', (e) => {
                    e.preventDefault();
                    this.handleAuthSubmit();
                });
            }
            
            async loadCryptoData() {
                try {
                    // نمایش حالت لودینگ
                    this.showLoadingState();
                    
                    // استفاده از API CoinCap برای دریافت قیمت‌ها
                    const response = await fetch('https://api.coincap.io/v2/assets?ids=bitcoin,ethereum,litecoin');
                    
                    if (!response.ok) {
                        throw new Error(`خطای شبکه: ${response.status}`);
                    }
                    
                    const data = await response.json();
                    this.cryptoData = {};
                    
                    data.data.forEach(asset => {
                        this.cryptoData[asset.id] = {
                            usd: parseFloat(asset.priceUsd),
                            usd_24h_change: parseFloat(asset.changePercent24Hr),
                            marketCap: parseFloat(asset.marketCapUsd),
                            volume: parseFloat(asset.volumeUsd24Hr)
                        };
                    });
                    
                    this.lastUpdateTime = new Date();
                    this.updateCryptoUI();
                    this.showSuccessMessage('قیمت‌ها با موفقیت بروزرسانی شد');
                    
                    // ذخیره در localStorage برای استفاده آفلاین
                    localStorage.setItem('cryptoData', JSON.stringify(this.cryptoData));
                    localStorage.setItem('lastUpdate', this.lastUpdateTime.toISOString());
                    
                } catch (error) {
                    console.error('Error fetching crypto data:', error);
                    this.useFallbackData();
                    this.showErrorMessage('خطا در دریافت قیمت‌ها. از داده‌های ذخیره شده استفاده می‌شود');
                } finally {
                    // مخفی کردن حالت لودینگ
                    this.hideLoadingState();
                }
            }
            
            useFallbackData() {
                // تلاش برای استفاده از داده‌های ذخیره شده در localStorage
                const savedData = localStorage.getItem('cryptoData');
                const savedTime = localStorage.getItem('lastUpdate');
                
                if (savedData && savedTime) {
                    this.cryptoData = JSON.parse(savedData);
                    this.lastUpdateTime = new Date(savedTime);
                    this.updateCryptoUI();
                } else {
                    // استفاده از داده‌های پیش‌فرض در صورت عدم وجود داده ذخیره شده
                    this.cryptoData = {
                        bitcoin: { usd: 50000, usd_24h_change: 2.5, marketCap: 950000000000, volume: 25000000000 },
                        ethereum: { usd: 3000, usd_24h_change: -1.2, marketCap: 350000000000, volume: 15000000000 },
                        litecoin: { usd: 150, usd_24h_change: 0.8, marketCap: 10000000000, volume: 500000000 }
                    };
                    this.lastUpdateTime = new Date();
                    this.updateCryptoUI();
                }
            }
            
            updateCryptoUI() {
                // بروزرسانی قیمت بیت‌کوین
                if (this.cryptoData.bitcoin) {
                    const btcPrice = this.formatCurrency(this.cryptoData.bitcoin.usd);
                    const btcElement = document.getElementById('btcPrice');
                    btcElement.textContent = `$${btcPrice}`;
                    btcElement.className = 'crypto-price ' + 
                        (this.cryptoData.bitcoin.usd_24h_change > 0 ? 'positive' : 'negative');
                }
                
                // بروزرسانی قیمت اتریوم
                if (this.cryptoData.ethereum) {
                    const ethPrice = this.formatCurrency(this.cryptoData.ethereum.usd);
                    const ethElement = document.getElementById('ethPrice');
                    ethElement.textContent = `$${ethPrice}`;
                    ethElement.className = 'crypto-price ' + 
                        (this.cryptoData.ethereum.usd_24h_change > 0 ? 'positive' : 'negative');
                }
                
                // بروزرسانی قیمت لایت‌کوین
                if (this.cryptoData.litecoin) {
                    const ltcPrice = this.formatCurrency(this.cryptoData.litecoin.usd);
                    const ltcElement = document.getElementById('ltcPrice');
                    ltcElement.textContent = `$${ltcPrice}`;
                    ltcElement.className = 'crypto-price ' + 
                        (this.cryptoData.litecoin.usd_24h_change > 0 ? 'positive' : 'negative');
                }
                
                // بروزرسانی قیمت IRX
                const irxElement = document.getElementById('irxPrice');
                irxElement.textContent = 'در انتظار...';
                irxElement.className = 'crypto-price';
                
                // بروزرسانی زمان آخرین آپدیت
                if (this.lastUpdateTime) {
                    const timeString = this.lastUpdateTime.toLocaleTimeString('fa-IR');
                    document.getElementById('updateTime').textContent = timeString;
                }
            }
            
            showLoadingState() {
                document.getElementById('refreshPrices').classList.add('loading');
                document.querySelectorAll('.crypto-price').forEach(el => {
                    el.textContent = 'در حال بارگذاری...';
                    el.className = 'crypto-price';
                });
            }
            
            hideLoadingState() {
                document.getElementById('refreshPrices').classList.remove('loading');
            }
            
            showSuccessMessage(message) {
                const notification = this.createNotification(message, 'success');
                document.body.appendChild(notification);
                setTimeout(() => {
                    notification.classList.add('fade-out');
                    setTimeout(() => notification.remove(), 500);
                }, 3000);
            }
            
            showErrorMessage(message) {
                const notification = this.createNotification(message, 'error');
                document.body.appendChild(notification);
                setTimeout(() => {
                    notification.classList.add('fade-out');
                    setTimeout(() => notification.remove(), 500);
                }, 5000);
            }
            
            createNotification(message, type) {
                const notification = document.createElement('div');
                notification.className = `notification ${type}`;
                notification.textContent = message;
                return notification;
            }
            
            updateClock() {
                const now = new Date();
                const hours = now.getHours();
                const minutes = now.getMinutes();
                const seconds = now.getSeconds();
                
                // ساعت دیجیتال
                const digitalTime = `${hours.toString().padStart(2, '0')}:${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
                document.getElementById('topClock').textContent = digitalTime;
                document.getElementById('sideClock').textContent = digitalTime;
                document.getElementById('digitalClock').textContent = digitalTime;
                
                // ساعت آنالوگ
                const hourDeg = (hours % 12) * 30 + minutes * 0.5;
                const minuteDeg = minutes * 6;
                const secondDeg = seconds * 6;
                
                document.getElementById('hourHand').style.transform = `translateX(-50%) rotate(${hourDeg}deg)`;
                document.getElementById('minuteHand').style.transform = `translateX(-50%) rotate(${minuteDeg}deg)`;
                document.getElementById('secondHand').style.transform = `translateX(-50%) rotate(${secondDeg}deg)`;
            }
            
            updateYear() {
                const currentYear = new Date().getFullYear();
                const persianYear = currentYear - 621;
                document.getElementById('currentYear').textContent = persianYear;
            }
            
            addNewsItem() {
                if (this.newsItems.length === 0) return;
                
                const newsContainer = document.getElementById('newsContainer');
                const newsItem = document.createElement('div');
                newsItem.className = 'news-item';
                
                // چرخش اخبار به صورت دایره‌ای
                const currentNews = this.newsItems.shift();
                this.newsItems.push(currentNews);
                
                newsItem.textContent = currentNews;
                newsContainer.appendChild(newsItem);
                
                // حذف قدیمی‌ترین خبر اگر تعداد زیاد شد
                if (newsContainer.children.length > 6) {
                    newsContainer.removeChild(newsContainer.children[1]);
                }
            }
            
            showAuthModal() {
                document.getElementById('authModal').classList.add('active');
                this.isAuthModalOpen = true;
            }
            
            hideAuthModal() {
                document.getElementById('authModal').classList.remove('active');
                this.isAuthModalOpen = false;
            }
            
            toggleAuthForm() {
                this.isLoginForm = !this.isLoginForm;
                
                const authTitle = document.getElementById('authTitle');
                const authSubmit = document.querySelector('#authForm button');
                const authToggleText = document.getElementById('authToggleText');
                const authToggleLink = document.getElementById('authToggleLink');
                const authFields = document.getElementById('authFields');
                
                if (this.isLoginForm) {
                    authTitle.textContent = 'ورود به سیستم IRX';
                    authSubmit.textContent = 'ورود';
                    authToggleText.textContent = 'حساب کاربری ندارید؟ ';
                    authToggleLink.textContent = 'ثبت‌نام کنید';
                    
                    authFields.innerHTML = `
                        <input type="email" placeholder="ایمیل" required>
                        <input type="password" placeholder="رمز عبور" required>
                    `;
                } else {
                    authTitle.textContent = 'ثبت‌نام در IRX';
                    authSubmit.textContent = 'ثبت‌نام';
                    authToggleText.textContent = 'حساب کاربری دارید؟ ';
                    authToggleLink.textContent = 'ورود';
                    
                    authFields.innerHTML = `
                        <input type="text" placeholder="نام کامل" required>
                        <input type="email" placeholder="ایمیل" required>
                        <input type="password" placeholder="رمز عبور" required>
                        <input type="password" placeholder="تکرار رمز عبور" required>
                    `;
                }
            }
            
            handleAuthSubmit() {
                if (this.isLoginForm) {
                    this.showSuccessMessage('با موفقیت وارد شدید!');
                } else {
                    this.showSuccessMessage('ثبت‌نام شما با موفقیت انجام شد!');
                }
                this.hideAuthModal();
            }
            
            setupSmoothScrolling() {
                document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                    anchor.addEventListener('click', function(e) {
                        e.preventDefault();
                        
                        const targetId = this.getAttribute('href');
                        if (targetId === '#') return;
                        
                        const targetElement = document.querySelector(targetId);
                        if (targetElement) {
                            targetElement.scrollIntoView({
                                behavior: 'smooth'
                            });
                        }
                    });
                });
            }
            
            formatCurrency(value) {
                return new Intl.NumberFormat('en-US', {
                    maximumFractionDigits: 2,
                    minimumFractionDigits: 2
                }).format(value);
            }
        }

        // راه‌اندازی برنامه
        document.addEventListener('DOMContentLoaded', () => {
            const app = new IRXApp();
            
            // نمایش پیام خوش‌آمدگویی
            setTimeout(() => {
                app.showSuccessMessage('به پروژه IRX خوش آمدید! قیمت‌ها به صورت لحظه‌ای بروز می‌شوند');
            }, 1000);
        });

        // ثبت Service Worker برای PWA
        if ('serviceWorker' in navigator) {
            window.addEventListener('load', () => {
                navigator.serviceWorker.register('/sw.js').then(registration => {
                    console.log('ServiceWorker ثبت شد با محدوده: ', registration.scope);
                }).catch(err => {
                    console.log('ثبت ServiceWorker با خطا مواجه شد: ', err);
                });
            });
        }
    </script>
</body>
</html>
