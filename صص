    <script>
        // منوی همبرگری
        const menuToggle = document.getElementById('menuToggle');
        const mainMenu = document.getElementById('mainMenu');
        
        menuToggle.addEventListener('click', () => {
            menuToggle.classList.toggle('active');
            mainMenu.classList.toggle('active');
        });
        
        // بستن منو با کلیک خارج از آن
        document.addEventListener('click', (e) => {
            if (!mainMenu.contains(e.target) && !menuToggle.contains(e.target)) {
                menuToggle.classList.remove('active');
                mainMenu.classList.remove('active');
            }
        });
        
        // ساعت آنالوگ و دیجیتال
        function updateClock() {
            const now = new Date();
            const hours = now.getHours();
            const minutes = now.getMinutes();
            const seconds = now.getSeconds();
            
            // ساعت آنالوگ
            const hourDeg = (hours % 12) * 30 + (minutes / 2);
            const minuteDeg = minutes * 6;
            const secondDeg = seconds * 6;
            
            document.getElementById('hourHand').style.transform = `rotate(${hourDeg}deg)`;
            document.getElementById('minuteHand').style.transform = `rotate(${minuteDeg}deg)`;
            document.getElementById('secondHand').style.transform = `rotate(${secondDeg}deg)`;
            
            // ساعت دیجیتال
            const formattedTime = 
                `${hours.toString().padStart(2, '0')}:${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
            document.getElementById('digitalClock').textContent = formattedTime;
        }
        
        setInterval(updateClock, 1000);
        updateClock(); // فراخوانی اولیه
        
        // کنترل موزیک
        const backgroundMusic = document.getElementById('backgroundMusic');
        const playPauseBtn = document.getElementById('playPauseBtn');
        const volumeControl = document.getElementById('volumeControl');
        const muteBtn = document.getElementById('muteBtn');
        
        // پخش خودکار موزیک پس از تعامل کاربر
        document.body.addEventListener('click', () => {
            if (backgroundMusic.paused) {
                backgroundMusic.play().catch(e => console.log('اتوماتیک پلی نشد:', e));
            }
        }, { once: true });
        
        playPauseBtn.addEventListener('click', () => {
            if (backgroundMusic.paused) {
                backgroundMusic.play();
                playPauseBtn.innerHTML = '<i class="fas fa-pause"></i>';
            } else {
                backgroundMusic.pause();
                playPauseBtn.innerHTML = '<i class="fas fa-play"></i>';
            }
        });
        
        volumeControl.addEventListener('input', () => {
            backgroundMusic.volume = volumeControl.value;
        });
        
        muteBtn.addEventListener('click', () => {
            if (backgroundMusic.muted) {
                backgroundMusic.muted = false;
                muteBtn.innerHTML = '<i class="fas fa-volume-up"></i>';
            } else {
                backgroundMusic.muted = true;
                muteBtn.innerHTML = '<i class="fas fa-volume-mute"></i>';
            }
        });
        
        // تنظیم حجم اولیه
        backgroundMusic.volume = volumeControl.value;
        
        // دریافت قیمت ارزهای دیجیتال - نسخه پیشرفته با به‌روزرسانی هر ثانیه
        let previousPrices = {
            bitcoin: { usd: 0, usd_24h_change: 0 },
            ethereum: { usd: 0, usd_24h_change: 0 },
            litecoin: { usd: 0, usd_24h_change: 0 }
        };
        
        let rialRate = 500000; // نرخ دلار به ریال (می‌تواند از API دریافت شود)
        
        async function fetchCryptoPrices() {
            try {
                // استفاده از API جایگزین در صورت مشکل با CoinGecko
                const response = await fetch('https://api.coingecko.com/api/v3/simple/price?ids=bitcoin,ethereum,litecoin&vs_currencies=usd&include_24hr_change=true');
                const data = await response.json();
                
                // ذخیره قیمت‌های قبلی برای مقایسه
                const currentPrices = {
                    bitcoin: {
                        usd: data.bitcoin.usd,
                        usd_24h_change: data.bitcoin.usd_24h_change
                    },
                    ethereum: {
                        usd: data.ethereum.usd,
                        usd_24h_change: data.ethereum.usd_24h_change
                    },
                    litecoin: {
                        usd: data.litecoin.usd,
                        usd_24h_change: data.litecoin.usd_24h_change
                    }
                };
                
                // به‌روزرسانی قیمت بیت‌کوین
                updateCryptoPrice('btc', currentPrices.bitcoin, previousPrices.bitcoin);
                
                // به‌روزرسانی قیمت اتریوم
                updateCryptoPrice('eth', currentPrices.ethereum, previousPrices.ethereum);
                
                // به‌روزرسانی قیمت لایت‌کوین
                updateCryptoPrice('ltc', currentPrices.litecoin, previousPrices.litecoin);
                
                // ذخیره قیمت‌های فعلی برای مقایسه بعدی
                previousPrices = currentPrices;
                
                // به‌روزرسانی نرخ ریال هر 5 دقیقه
                if (Math.random() < 0.2) { // شبیه‌سازی به‌روزرسانی نرخ
                    rialRate = Math.floor(400000 + Math.random() * 200000);
                }
            } catch (error) {
                console.error('خطا در دریافت قیمت ارزها:', error);
                
                // استفاده از داده‌های محلی در صورت خطا
                const localData = {
                    bitcoin: {
                        usd: 30000 + Math.random() * 1000,
                        usd_24h_change: -2 + Math.random() * 4
                    },
                    ethereum: {
                        usd: 2000 + Math.random() * 200,
                        usd_24h_change: -1.5 + Math.random() * 3
                    },
                    litecoin: {
                        usd: 70 + Math.random() * 10,
                        usd_24h_change: -1 + Math.random() * 2
                    }
                };
                
                updateCryptoPrice('btc', localData.bitcoin, previousPrices.bitcoin);
                updateCryptoPrice('eth', localData.ethereum, previousPrices.ethereum);
                updateCryptoPrice('ltc', localData.litecoin, previousPrices.litecoin);
            }
        }
        
        function updateCryptoPrice(prefix, current, previous) {
            const usdElement = document.getElementById(`${prefix}Usd`);
            const changeElement = document.getElementById(`${prefix}Change`);
            const rialElement = document.getElementById(`${prefix}Rial`);
            
            // قالب‌بندی قیمت
            const formattedUsd = current.usd.toLocaleString('en-US', {
                minimumFractionDigits: 2,
                maximumFractionDigits: 2
            });
            
            // قالب‌بندی تغییرات
            const change = current.usd_24h_change;
            const changeFormatted = Math.abs(change).toFixed(2);
            
            // محاسبه قیمت ریالی
            const rialPrice = (current.usd * rialRate).toLocaleString('fa-IR');
            
            // اعمال تغییرات
            usdElement.textContent = formattedUsd;
            changeElement.textContent = `${change > 0 ? '+' : ''}${changeFormatted}%`;
            rialElement.textContent = `${rialPrice} ریال`;
            
            // اعمال کلاس بر اساس تغییرات
            changeElement.className = 'crypto-change';
            changeElement.classList.add(change > 0 ? 'positive' : 'negative');
            
            // انیمیشن تغییر قیمت
            if (previous.usd > 0) {
                if (current.usd > previous.usd) {
                    usdElement.style.color = 'var(--positive-color)';
                    setTimeout(() => {
                        usdElement.style.color = 'inherit';
                    }, 1000);
                } else if (current.usd < previous.usd) {
                    usdElement.style.color = 'var(--negative-color)';
                    setTimeout(() => {
                        usdElement.style.color = 'inherit';
                    }, 1000);
                }
            }
        }
        
        // اولین فراخوانی و تنظیم تایمر برای به‌روزرسانی هر ثانیه
        fetchCryptoPrices();
        setInterval(fetchCryptoPrices, 1000);
        
        // نمودار قیمت بیت‌کوین
        function initChart() {
            const ctx = document.getElementById('btcChart').getContext('2d');
            
            // داده‌های نمونه برای نمودار
            const labels = Array.from({length: 24}, (_, i) => `${i}:00`);
            const data = Array.from({length: 24}, () => 30000 + Math.random() * 1000);
            
            const chart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'قیمت بیت‌کوین (USD)',
                        data: data,
                        borderColor: 'var(--primary-color)',
                        backgroundColor: 'rgba(255, 215, 0, 0.1)',
                        borderWidth: 2,
                        tension: 0.4,
                        fill: true
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: false,
                            grid: {
                                color: 'rgba(255, 255, 255, 0.1)'
                            },
                            ticks: {
                                color: 'var(--text-color)'
                            }
                        },
                        x: {
                            grid: {
                                color: 'rgba(255, 255, 255, 0.1)'
                            },
                            ticks: {
                                color: 'var(--text-color)'
                            }
                        }
                    }
                }
            });
            
            // به‌روزرسانی نمودار هر دقیقه
            setInterval(() => {
                chart.data.datasets[0].data = chart.data.datasets[0].data.slice(1).concat(30000 + Math.random() * 1000);
                chart.update();
            }, 60000);
        }
        
        // دکمه بازگشت به بالا
        const backToTop = document.getElementById('backToTop');
        
        window.addEventListener('scroll', () => {
            if (window.pageYOffset > 300) {
                backToTop.classList.add('visible');
            } else {
                backToTop.classList.remove('visible');
            }
        });
        
        backToTop.addEventListener('click', () => {
            window.scrollTo({
                top: 0,
                behavior: 'smooth'
            });
        });
        
        // اسکرول نرم برای لینک‌ها
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function(e) {
                e.preventDefault();
                
                const targetId = this.getAttribute('href');
                if (targetId === '#') return;
                
                const targetElement = document.querySelector(targetId);
                if (targetElement) {
                    targetElement.scrollIntoView({
                        behavior: 'smooth'
                    });
                    
                    // بستن منو در حالت موبایل
                    menuToggle.classList.remove('active');
                    mainMenu.classList.remove('active');
                }
            });
        });
        
        // انیمیشن‌های اسکرول
        const animateOnScroll = () => {
            const elements = document.querySelectorAll('.main-content, .crypto-widget, .news-ticker');
            
            elements.forEach(element => {
                const elementPosition = element.getBoundingClientRect().top;
                const screenPosition = window.innerHeight / 1.3;
                
                if (elementPosition < screenPosition) {
                    element.style.opacity = '1';
                    element.style.transform = 'translateY(0)';
                }
            });
        };
        
        // تنظیم حالت اولیه برای عناصر
        document.querySelectorAll('.main-content, .crypto-widget, .news-ticker').forEach(element => {
            element.style.opacity = '0';
            element.style.transform = 'translateY(20px)';
            element.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
        });
        
        window.addEventListener('scroll', animateOnScroll);
        window.addEventListener('load', () => {
            animateOnScroll();
            initChart();
        });
    </script>
</body>
</html>