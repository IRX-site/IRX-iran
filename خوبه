        // سیستم مدیریت انیمیشن‌های اسکرول
        class AnimationManager {
            constructor() {
                AOS.init({
                    duration: 800,
                    easing: 'ease-in-out',
                    once: true,
                    offset: 100
                });
            }
        }
        
        // سیستم مدیریت اخبار
        class NewsManager {
            constructor() {
                this.newsItems = [
                    { time: "10:45", text: "<strong>توسعه پروژه IRX:</strong> فاز اول توسعه پلتفرم با موفقیت به پایان رسید." },
                    { time: "09:30", text: "<strong>همکاری‌های بین‌المللی:</strong> مذاکرات با چندین کشور برای پذیرش IRX در جریان است." },
                    { time: "08:15", text: "<strong>اقتصاد ایران:</strong> رشد چشمگیر صادرات غیرنفتی در سه ماهه اخیر." },
                    { time: "07:00", text: "<strong>فناوری بلاکچین:</strong> ایران در بین 10 کشور برتر جهان در توسعه فناوری بلاکچین قرار گرفت." },
                    { time: "06:30", text: "<strong>بازار ارز:</strong> نرخ دلار در بازار آزاد با کاهش 2 درصدی همراه شد." },
                    { time: "05:45", text: "<strong>IRX:</strong> تست‌های امنیتی شبکه با موفقیت انجام شد." },
                    { time: "04:20", text: "<strong>اقتصاد دیجیتال:</strong> رشد 35 درصدی استفاده از ارزهای دیجیتال در ایران." }
                ];
                
                this.newsContainer = document.querySelector('.news');
                this.renderNews();
                this.startNewsRotation();
            }
            
            renderNews() {
                this.newsContainer.innerHTML = `
                    <h3 class="news__header"><i class="fas fa-newspaper"></i> آخرین اخبار مالی</h3>
                    ${this.newsItems.map(item => `
                        <div class="news__item">
                            <span class="news__time">${item.time}</span>
                            <span>${item.text}</span>
                        </div>
                    `).join('')}
                `;
            }
            
            startNewsRotation() {
                setInterval(() => {
                    // جابجایی آیتم‌های خبری
                    const firstItem = this.newsItems.shift();
                    this.newsItems.push(firstItem);
                    this.renderNews();
                }, 10000); // هر 10 ثانیه
            }
        }
        
        // مقداردهی اولیه سیستم‌ها
        const cryptoManager = new CryptoManager();
        const clockManager = new ClockManager();
        const menuManager = new MenuManager();
        const scrollManager = new ScrollManager();
        const accordionManager = new AccordionManager();
        const preloaderManager = new PreloaderManager();
        const particlesManager = new ParticlesManager();
        const animationManager = new AnimationManager();
        const newsManager = new NewsManager();
        
        // اولین فراخوانی و تنظیم تایمر برای به‌روزرسانی هر 10 ثانیه
        cryptoManager.fetchPrices();
        setInterval(() => cryptoManager.fetchPrices(), 10000);
        
        // بارگذاری اولیه نمودارها
        window.addEventListener('load', () => {
            cryptoManager.initCharts();
        });
    </script>
</body>
</html>