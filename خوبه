    <!-- نوتیفیکیشن -->
    <div class="notification" id="notification">
        <i class="fas fa-info-circle notification__icon"></i>
        <span id="notificationMessage">پیام نوتیفیکیشن</span>
    </div>
    
    <!-- اسکریپت‌های JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/particles.js@2.0.0/particles.min.js"></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    
    <script>
        // سیستم کش پیشرفته برای داده‌ها
        class CacheSystem {
            constructor() {
                this.cache = {};
                this.defaultTTL = 10000; // 10 ثانیه
            }
            
            set(key, data, ttl = this.defaultTTL) {
                this.cache[key] = {
                    data: data,
                    expires: Date.now() + ttl
                };
            }
            
            get(key) {
                const item = this.cache[key];
                if (!item) return null;
                
                if (Date.now() > item.expires) {
                    delete this.cache[key];
                    return null;
                }
                
                return item.data;
            }
            
            clear() {
                this.cache = {};
            }
        }
        
        // سیستم نوتیفیکیشن
        class NotificationSystem {
            constructor() {
                this.notification = document.getElementById('notification');
                this.message = document.getElementById('notificationMessage');
                this.timeout = null;
            }
            
            show(message, type = 'info', duration = 3000) {
                this.message.textContent = message;
                this.notification.className = 'notification notification--visible';
                
                // حذف کلاس‌های قبلی
                this.notification.classList.remove('notification--info', 'notification--success', 'notification--warning', 'notification--error');
                
                // اضافه کردن کلاس نوع نوتیفیکیشن
                this.notification.classList.add(`notification--${type}`);
                
                // پاک کردن تایموت قبلی
                if (this.timeout) clearTimeout(this.timeout);
                
                // تنظیم تایموت برای مخفی کردن
                this.timeout = setTimeout(() => {
                    this.hide();
                }, duration);
            }
            
            hide() {
                this.notification.classList.remove('notification--visible');
                this.notification.classList.add('notification--hidden');
            }
        }
        
        // سیستم مدیریت ارزهای دیجیتال
        class CryptoManager {
            constructor() {
                this.cache = new CacheSystem();
                this.notification = new NotificationSystem();
                this.rialRate = 500000; // نرخ دلار به ریال
                this.previousPrices = {
                    bitcoin: { usd: 0, usd_24h_change: 0, market_cap: 0 },
                    ethereum: { usd: 0, usd_24h_change: 0, market_cap: 0 },
                    litecoin: { usd: 0, usd_24h_change: 0, market_cap: 0 },
                    irx: { usd: 0, usd_24h_change: 0, market_cap: 0, status: 'در انتظار' }
                };
                
                this.cryptoList = [
                    { id: 'bitcoin', symbol: 'btc', name: 'بیت‌کوین', icon: 'https://cryptologos.cc/logos/bitcoin-btc-logo.png' },
                    { id: 'ethereum', symbol: 'eth', name: 'اتریوم', icon: 'https://cryptologos.cc/logos/ethereum-eth-logo.png' },
                    { id: 'litecoin', symbol: 'ltc', name: 'لایت‌کوین', icon: 'https://cryptologos.cc/logos/litecoin-ltc-logo.png' },
                    { id: 'irx', symbol: 'irx', name: 'IRX', icon: '' }
                ];
                
                this.charts = {
                    btc: null,
                    eth: null
                };
            }
            
            async fetchPrices() {
                try {
                    // استفاده از API Binance برای دریافت قیمت‌های لحظه‌ای
                    const [btcResponse, ethResponse, ltcResponse] = await Promise.all([
                        fetch('https://api.binance.com/api/v3/ticker/24hr?symbol=BTCUSDT'),
                        fetch('https://api.binance.com/api/v3/ticker/24hr?symbol=ETHUSDT'),
                        fetch('https://api.binance.com/api/v3/ticker/24hr?symbol=LTCUSDT')
                    ]);
                    
                    const [btcData, ethData, ltcData] = await Promise.all([
                        btcResponse.json(),
                        ethResponse.json(),
                        ltcResponse.json()
                    ]);
                    
                    // پردازش داده‌های دریافتی
                    const currentPrices = {
                        bitcoin: { 
                            usd: parseFloat(btcData.lastPrice),
                            usd_24h_change: parseFloat(btcData.priceChangePercent),
                            market_cap: parseFloat(btcData.lastPrice) * 19400000 // تقریبی
                        },
                        ethereum: { 
                            usd: parseFloat(ethData.lastPrice),
                            usd_24h_change: parseFloat(ethData.priceChangePercent),
                            market_cap: parseFloat(ethData.lastPrice) * 120000000 // تقریبی
                        },
                        litecoin: { 
                            usd: parseFloat(ltcData.lastPrice),
                            usd_24h_change: parseFloat(ltcData.priceChangePercent),
                            market_cap: parseFloat(ltcData.lastPrice) * 72000000 // تقریبی
                        },
                        irx: { 
                            usd: 0,
                            usd_24h_change: 0,
                            market_cap: 0,
                            status: 'در انتظار'
                        }
                    };
                    
                    // به‌روزرسانی کش
                    this.cache.set('cryptoPrices', currentPrices);
                    
                    // به‌روزرسانی نمایش قیمت‌ها
                    this.updatePrices(currentPrices);
                    
                } catch (error) {
                    console.error('خطا در دریافت قیمت ارزها:', error);
                    this.notification.show('خطا در دریافت قیمت‌ها از Binance. استفاده از داده‌های جایگزین', 'error');
                    
                    // استفاده از داده‌های جایگزین در صورت خطا
                    const fallbackData = this.cache.get('cryptoPrices') || {
                        bitcoin: {
                            usd: 120000 + Math.random() * 5000,
                            usd_24h_change: -2 + Math.random() * 4,
                            market_cap: 2300000000000 + Math.random() * 100000000000
                        },
                        ethereum: {
                            usd: 8500 + Math.random() * 300,
                            usd_24h_change: -1.5 + Math.random() * 3,
                            market_cap: 1020000000000 + Math.random() * 50000000000
                        },
                        litecoin: {
                            usd: 350 + Math.random() * 20,
                            usd_24h_change: -1 + Math.random() * 2,
                            market_cap: 25000000000 + Math.random() * 1000000000
                        },
                        irx: {
                            usd: 0,
                            usd_24h_change: 0,
                            market_cap: 0,
                            status: 'در انتظار'
                        }
                    };
                    
                    this.updatePrices(fallbackData);
                }
            }
            
            updatePrices(currentPrices) {
                // به‌روزرسانی ویجت‌های قیمت
                this.updateCryptoPrice('btc', currentPrices.bitcoin, this.previousPrices.bitcoin);
                this.updateCryptoPrice('eth', currentPrices.ethereum, this.previousPrices.ethereum);
                this.updateCryptoPrice('ltc', currentPrices.litecoin, this.previousPrices.litecoin);
                this.updateCryptoPrice('irx', currentPrices.irx, this.previousPrices.irx);
                
                // به‌روزرسانی جدول قیمت‌ها
                this.updatePriceTable(currentPrices);
                
                // ذخیره قیمت‌های فعلی برای مقایسه بعدی
                this.previousPrices = currentPrices;
            }
            
            updateCryptoPrice(prefix, current, previous) {
                const usdElement = document.getElementById(`${prefix}Usd`);
                const changeElement = document.getElementById(`${prefix}Change`);
                const rialElement = document.getElementById(`${prefix}Rial`);
                
                if (current.status === 'در انتظار') {
                    if (changeElement) {
                        changeElement.textContent = current.status;
                        changeElement.className = 'crypto__change';
                    }
                    if (usdElement) usdElement.textContent = '-';
                    if (rialElement) rialElement.textContent = '-';
                    return;
                }
                
                // قالب‌بندی قیمت
                const formattedUsd = current.usd.toLocaleString('en-US', {
                    minimumFractionDigits: 2,
                    maximumFractionDigits: prefix === 'irx' ? 4 : 2
                });
                
                // قالب‌بندی تغییرات
                const change = current.usd_24h_change;
                const changeFormatted = `${change > 0 ? '+' : ''}${change.toFixed(2)}%`;
                
                // محاسبه قیمت ریالی
                const rialPrice = (current.usd * this.rialRate).toLocaleString('fa-IR');
                
                // اعمال تغییرات
                if (usdElement) usdElement.textContent = formattedUsd;
                if (changeElement) {
                    changeElement.textContent = changeFormatted;
                    changeElement.className = 'crypto__change';
                    changeElement.classList.add(change > 0 ? 'crypto__change--positive' : 'crypto__change--negative');
                }
                if (rialElement) rialElement.textContent = `${rialPrice} ریال`;
                
                // انیمیشن تغییر قیمت
                if (previous.usd > 0 && usdElement) {
                    if (current.usd > previous.usd) {
                        usdElement.style.color = 'var(--positive-color)';
                        setTimeout(() => {
                            usdElement.style.color = 'inherit';
                        }, 1000);
                    } else if (current.usd < previous.usd) {
                        usdElement.style.color = 'var(--negative-color)';
                        setTimeout(() => {
                            usdElement.style.color = 'inherit';
                        }, 1000);
                    }
                }
            }
            
            updatePriceTable(prices) {
                const tableBody = document.getElementById('cryptoTableBody');
                let html = '';
                
                this.cryptoList.forEach(crypto => {
                    const data = prices[crypto.id];
                    
                    if (data.status === 'در انتظار') {
                        html += `
                            <tr>
                                <td>
                                    <div style="display: flex; align-items: center; gap: 0.5rem;">
                                        ${crypto.icon ? `<img src="${crypto.icon}" alt="${crypto.name}" class="table__icon">` : `<i class="fas fa-star" style="color: var(--primary-color);"></i>`}
                                        <span>${crypto.name}</span>
                                    </div>
                                </td>
                                <td>-</td>
                                <td>${data.status}</td>
                                <td>-</td>
                                <td>-</td>
                            </tr>
                        `;
                        return;
                    }
                    
                    const change = data.usd_24h_change;
                    const changeClass = change > 0 ? 'table__positive' : 'table__negative';
                    const changeFormatted = `${change > 0 ? '+' : ''}${change.toFixed(2)}%`;
                    const marketCap = (data.market_cap / 1000000000).toFixed(2) + 'B';
                    const rialPrice = (data.usd * this.rialRate).toLocaleString('fa-IR');
                    
                    html += `
                        <tr>
                            <td>
                                <div style="display: flex; align-items: center; gap: 0.5rem;">
                                    ${crypto.icon ? `<img src="${crypto.icon}" alt="${crypto.name}" class="table__icon">` : `<i class="fas fa-star" style="color: var(--primary-color);"></i>`}
                                    <span>${crypto.name}</span>
                                </div>
                            </td>
                            <td>$${data.usd.toLocaleString('en-US', {minimumFractionDigits: 2, maximumFractionDigits: 2})}</td>
                            <td class="${changeClass}">${changeFormatted}</td>
                            <td>${rialPrice} ریال</td>
                            <td>$${marketCap}</td>
                        </tr>
                    `;
                });
                
                tableBody.innerHTML = html;
            }
            
            initCharts() {
                // داده‌های نمونه برای نمودارها
                const labels = Array.from({length: 24}, (_, i) => `${i}:00`);
                const btcData = Array.from({length: 24}, () => 120000 + Math.random() * 5000);
                const ethData = Array.from({length: 24}, () => 8500 + Math.random() * 300);
                
                // نمودار بیت‌کوین
                const btcCtx = document.getElementById('btcChart').getContext('2d');
                this.charts.btc = new Chart(btcCtx, {
                    type: 'line',
                    data: {
                        labels: labels,
                        datasets: [{
                            label: 'قیمت بیت‌کوین (USD)',
                            data: btcData,
                            borderColor: 'var(--primary-color)',
                            backgroundColor: 'rgba(255, 215, 0, 0.1)',
                            borderWidth: 2,
                            tension: 0.4,
                            fill: true,
                            pointRadius: 0
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: {
                                display: false
                            },
                            tooltip: {
                                mode: 'index',
                                intersect: false,
                                rtl: true,
                                callbacks: {
                                    label: function(context) {
                                        return `قیمت: $${context.parsed.y.toLocaleString('en-US', {minimumFractionDigits: 2})}`;
                                    }
                                }
                            }
                        },
                        scales: {
                            y: {
                                beginAtZero: false,
                                grid: {
                                    color: 'rgba(255, 255, 255, 0.1)'
                                },
                                ticks: {
                                    color: 'var(--text-color)',
                                    callback: function(value) {
                                        return `$${value.toLocaleString('en-US')}`;
                                    }
                                }
                            },
                            x: {
                                grid: {
                                    color: 'rgba(255, 255, 255, 0.1)'
                                },
                                ticks: {
                                    color: 'var(--text-color)'
                                }
                            }
                        }
                    }
                });
                
                // نمودار اتریوم
                const ethCtx = document.getElementById('ethChart').getContext('2d');
                this.charts.eth = new Chart(ethCtx, {
                    type: 'line',
                    data: {
                        labels: labels,
                        datasets: [{
                            label: 'قیمت اتریوم (USD)',
                            data: ethData,
                            borderColor: '#627EEA',
                            backgroundColor: 'rgba(98, 126, 234, 0.1)',
                            borderWidth: 2,
                            tension: 0.4,
                            fill: true,
                            pointRadius: 0
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: {
                                display: false
                            },
                            tooltip: {
                                mode: 'index',
                                intersect: false,
                                rtl: true,
                                callbacks: {
                                    label: function(context) {
                                        return `قیمت: $${context.parsed.y.toLocaleString('en-US', {minimumFractionDigits: 2})}`;
                                    }
                                }
                            }
                        },
                        scales: {
                            y: {
                                beginAtZero: false,
                                grid: {
                                    color: 'rgba(255, 255, 255, 0.1)'
                                },
                                ticks: {
                                    color: 'var(--text-color)',
                                    callback: function(value) {
                                        return `$${value.toLocaleString('en-US')}`;
                                    }
                                }
                            },
                            x: {
                                grid: {
                                    color: 'rgba(255, 255, 255, 0.1)'
                                },
                                ticks: {
                                    color: 'var(--text-color)'
                                }
                            }
                        }
                    }
                });
                
                // به‌روزرسانی نمودارها هر دقیقه
                setInterval(() => {
                    if (this.charts.btc) {
                        this.charts.btc.data.datasets[0].data = this.charts.btc.data.datasets[0].data.slice(1).concat(120000 + Math.random() * 5000);
                        this.charts.btc.update();
                    }
                    
                    if (this.charts.eth) {
                        this.charts.eth.data.datasets[0].data = this.charts.eth.data.datasets[0].data.slice(1).concat(8500 + Math.random() * 300);
                        this.charts.eth.update();
                    }
                }, 60000);
            }
        }
        
        // سیستم مدیریت ساعت
        class ClockManager {
            constructor() {
                this.hourHand = document.getElementById('hourHand');
                this.minuteHand = document.getElementById('minuteHand');
                this.secondHand = document.getElementById('secondHand');
                this.digitalClock = document.getElementById('digitalClock');
                
                this.updateClock();
                setInterval(() => this.updateClock(), 1000);
            }
            
            updateClock() {
                const now = new Date();
                const hours = now.getHours();
                const minutes = now.getMinutes();
                const seconds = now.getSeconds();
                
                // ساعت آنالوگ
                const hourDeg = (hours % 12) * 30 + (minutes / 2);
                const minuteDeg = minutes * 6;
                const secondDeg = seconds * 6;
                
                this.hourHand.style.transform = `rotate(${hourDeg}deg)`;
                this.minuteHand.style.transform = `rotate(${minuteDeg}deg)`;
                this.secondHand.style.transform = `rotate(${secondDeg}deg)`;
                
                // ساعت دیجیتال
                const formattedTime = 
                    `${hours.toString().padStart(2, '0')}:${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
                this.digitalClock.textContent = formattedTime;
            }
        }
        
        // سیستم مدیریت منو
        class MenuManager {
            constructor() {
                this.menuToggle = document.getElementById('menuToggle');
                this.mainMenu = document.getElementById('mainMenu');
                
                this.menuToggle.addEventListener('click', () => this.toggleMenu());
                
                // بستن منو با کلیک خارج از آن
                document.addEventListener('click', (e) => {
                    if (!this.mainMenu.contains(e.target) && !this.menuToggle.contains(e.target)) {
                        this.closeMenu();
                    }
                });
            }
            
            toggleMenu() {
                this.menuToggle.classList.toggle('menu-toggle--active');
                this.mainMenu.classList.toggle('main-menu--active');
            }
            
            closeMenu() {
                this.menuToggle.classList.remove('menu-toggle--active');
                this.mainMenu.classList.remove('main-menu--active');
            }
        }
        
        // سیستم مدیریت اسکرول
        class ScrollManager {
            constructor() {
                this.backToTop = document.getElementById('backToTop');
                
                window.addEventListener('scroll', () => this.handleScroll());
                this.backToTop.addEventListener('click', () => this.scrollToTop());
                
                // اسکرول نرم برای لینک‌ها
                document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                    anchor.addEventListener('click', (e) => this.handleAnchorClick(e, anchor));
                });
            }
            
            handleScroll() {
                if (window.pageYOffset > 300) {
                    this.backToTop.classList.add('back-to-top--visible');
                } else {
                    this.backToTop.classList.remove('back-to-top--visible');
                }
            }
            
            scrollToTop() {
                window.scrollTo({
                    top: 0,
                    behavior: 'smooth'
                });
            }
            
            handleAnchorClick(e, anchor) {
                e.preventDefault();
                
                const targetId = anchor.getAttribute('href');
                if (targetId === '#') return;
                
                const targetElement = document.querySelector(targetId);
                if (targetElement) {
                    targetElement.scrollIntoView({
                        behavior: 'smooth'
                    });
                    
                    // بستن منو در حالت موبایل
                    menuManager.closeMenu();
                }
            }
        }
        
        // سیستم مدیریت آکاردئون
        class AccordionManager {
            constructor() {
                document.querySelectorAll('.accordion__header').forEach(header => {
                    header.addEventListener('click', () => {
                        const item = header.parentElement;
                        item.classList.toggle('accordion__item--active');
                    });
                });
            }
        }
        
        // سیستم مدیریت پیش‌بارگذاری
        class PreloaderManager {
            constructor() {
                this.preloader = document.getElementById('preloader');
                
                window.addEventListener('load', () => {
                    setTimeout(() => {
                        this.preloader.classList.add('preloader--hidden');
                    }, 1500);
                });
            }
        }
        
