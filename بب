    <div class="crypto-container">
        <div class="crypto-box">
            <span>بیت‌کوین (BTC)</span>
            <span id="btc-price" class="price">در حال بارگذاری...</span>
        </div>
        <div class="crypto-box">
            <span>⭐ IRX</span>
            <span class="price waiting">در انتظار...</span>
        </div>
        <div class="crypto-box">
            <span>اتریوم (ETH)</span>
            <span id="eth-price" class="price">در حال بارگذاری...</span>
        </div>
        <div class="crypto-box">
            <span>لایت‌کوین (LTC)</span>
            <span id="ltc-price" class="price">در حال بارگذاری...</span>
        </div>
    </div>

    <script>
        let previousPrices = { bitcoin: null, ethereum: null, litecoin: null };

        async function fetchCryptoPrices() {
            try {
                const response = await fetch('https://api.coingecko.com/api/v3/simple/price?ids=bitcoin,ethereum,litecoin&vs_currencies=usd');
                const data = await response.json();

                updatePrice('btc-price', data.bitcoin.usd, previousPrices.bitcoin);
                updatePrice('eth-price', data.ethereum.usd, previousPrices.ethereum);
                updatePrice('ltc-price', data.litecoin.usd, previousPrices.litecoin);

                previousPrices.bitcoin = data.bitcoin.usd;
                previousPrices.ethereum = data.ethereum.usd;
                previousPrices.litecoin = data.litecoin.usd;

            } catch (error) {
                console.error('خطا در دریافت قیمت‌ها:', error);
            }
        }

        function updatePrice(elementId, newPrice, oldPrice) {
            const priceElement = document.getElementById(elementId);
            priceElement.innerText = `$${newPrice}`;

            if (oldPrice !== null) { 
                if (newPrice > oldPrice) {
                    priceElement.classList.add("green");
                    priceElement.classList.remove("red");
                } else if (newPrice < oldPrice) {
                    priceElement.classList.add("red");
                    priceElement.classList.remove("green");
                } else {
                    priceElement.classList.remove("red", "green");
                }
            }
        }

        fetchCryptoPrices();
        setInterval(fetchCryptoPrices, 5000);
    </script>

</body>
</html>-- محتوای اصلی -->
