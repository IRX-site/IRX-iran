                <div class="irx-clock-number" style="top: 50%; left: 5%;">9</div>
            </div>
            
            <!-- عقربه‌ها -->
            <div class="irx-hour-hand" id="irxHourHand"></div>
            <div class="irx-minute-hand" id="irxMinuteHand"></div>
            <div class="irx-second-hand" id="irxSecondHand"></div>
            <div class="irx-clock-center"></div>
        </div>
        
        <!-- ساعت دیجیتال -->
        <div class="irx-digital-clock" id="irxDigitalClock"></div>
    </div>

    <script>
        // تابع به‌روزرسانی ساعت
        function updateIRXClock() {
            const now = new Date();
            const hours = now.getHours();
            const minutes = now.getMinutes();
            const seconds = now.getSeconds();
            
            // محاسبه درجات برای عقربه‌ها
            const hourDeg = (hours % 12) * 30 + (minutes / 2);
            const minuteDeg = minutes * 6;
            const secondDeg = seconds * 6;
            
            // اعمال چرخش به عقربه‌ها
            document.getElementById('irxHourHand').style.transform = `translateX(-50%) rotate(${hourDeg}deg)`;
            document.getElementById('irxMinuteHand').style.transform = `translateX(-50%) rotate(${minuteDeg}deg)`;
            document.getElementById('irxSecondHand').style.transform = `translateX(-50%) rotate(${secondDeg}deg)`;
            
            // به‌روزرسانی ساعت دیجیتال
            const formattedTime = 
                `${hours.toString().padStart(2, '0')}:${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
            document.getElementById('irxDigitalClock').textContent = formattedTime;
        }
        
        // به‌روزرسانی اولیه و تنظیم تابع برای اجرای هر ثانیه
        updateIRXClock();
        setInterval(updateIRXClock, 1000);
    </script>
