    <!-- اسکریپت‌های JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/particles.js@2.0.0/particles.min.js"></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    
    <script>
        // پیش‌بارگذاری
        window.addEventListener('load', function() {
            setTimeout(function() {
                document.getElementById('preloader').classList.add('hidden');
            }, 1500);
        });
        
        // منوی همبرگری
        const menuToggle = document.getElementById('menuToggle');
        const mainMenu = document.getElementById('mainMenu');
        
        menuToggle.addEventListener('click', () => {
            menuToggle.classList.toggle('active');
            mainMenu.classList.toggle('active');
        });
        
        // بستن منو با کلیک خارج از آن
        document.addEventListener('click', (e) => {
            if (!mainMenu.contains(e.target) && !menuToggle.contains(e.target)) {
                menuToggle.classList.remove('active');
                mainMenu.classList.remove('active');
            }
        });
        
        // ساعت آنالوگ و دیجیتال
        function updateClock() {
            const now = new Date();
            const hours = now.getHours();
            const minutes = now.getMinutes();
            const seconds = now.getSeconds();
            
            // ساعت آنالوگ
            const hourDeg = (hours % 12) * 30 + (minutes / 2);
            const minuteDeg = minutes * 6;
            const secondDeg = seconds * 6;
            
            document.getElementById('hourHand').style.transform = `rotate(${hourDeg}deg)`;
            document.getElementById('minuteHand').style.transform = `rotate(${minuteDeg}deg)`;
            document.getElementById('secondHand').style.transform = `rotate(${secondDeg}deg)`;
            
            // ساعت دیجیتال
            const formattedTime = 
                `${hours.toString().padStart(2, '0')}:${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
            document.getElementById('digitalClock').textContent = formattedTime;
        }
        
        setInterval(updateClock, 1000);
        updateClock(); // فراخوانی اولیه
        
        // دریافت قیمت ارزهای دیجیتال - نسخه پیشرفته با به‌روزرسانی هر ثانیه
        let previousPrices = {
            bitcoin: { usd: 0, usd_24h_change: 0, market_cap: 0 },
            ethereum: { usd: 0, usd_24h_change: 0, market_cap: 0 },
            litecoin: { usd: 0, usd_24h_change: 0, market_cap: 0 },
            tether: { usd: 0, usd_24h_change: 0, market_cap: 0 }
        };
        
        let rialRate = 500000; // نرخ دلار به ریال
        
        // لیست ارزها برای نمایش در جدول
        const cryptoList = [
            { id: 'bitcoin', symbol: 'btc', name: 'بیت‌کوین', icon: 'https://cryptologos.cc/logos/bitcoin-btc-logo.png' },
            { id: 'ethereum', symbol: 'eth', name: 'اتریوم', icon: 'https://cryptologos.cc/logos/ethereum-eth-logo.png' },
            { id: 'litecoin', symbol: 'ltc', name: 'لایت‌کوین', icon: 'https://cryptologos.cc/logos/litecoin-ltc-logo.png' },
            { id: 'tether', symbol: 'usdt', name: 'تتر', icon: 'https://cryptologos.cc/logos/tether-usdt-logo.png' },
            { id: 'irx', symbol: 'irx', name: 'IRX', icon: '' }
        ];
        
        // سیستم کش برای ذخیره قیمت‌ها
        const priceCache = {
            data: null,
            lastUpdated: 0,
            cacheDuration: 60000 // 1 دقیقه
        };
        
        async function fetchCryptoPrices() {
            try {
                // بررسی کش
                const now = Date.now();
                if (priceCache.data && now - priceCache.lastUpdated < priceCache.cacheDuration) {
                    updatePrices(priceCache.data);
                    return;
                }
                
                // استفاده از API جایگزین در صورت مشکل با CoinGecko
                const response = await fetch('https://api.coingecko.com/api/v3/coins/markets?vs_currency=usd&ids=bitcoin,ethereum,litecoin,tether&order=market_cap_desc&per_page=100&page=1&sparkline=false&price_change_percentage=24h');
                const data = await response.json();
                
                // پردازش داده‌های دریافتی
                const currentPrices = {
                    bitcoin: { usd: 0, usd_24h_change: 0, market_cap: 0 },
                    ethereum: { usd: 0, usd_24h_change: 0, market_cap: 0 },
                    litecoin: { usd: 0, usd_24h_change: 0, market_cap: 0 },
                    tether: { usd: 0, usd_24h_change: 0, market_cap: 0 },
                    irx: { 
                        usd: 0,
                        usd_24h_change: 0,
                        market_cap: 0,
                        status: 'در انتظار'
                    }
                };
                
                // به‌روزرسانی قیمت‌ها از داده‌های API
                data.forEach(crypto => {
                    if (crypto.id === 'bitcoin') {
                        currentPrices.bitcoin.usd = crypto.current_price;
                        currentPrices.bitcoin.usd_24h_change = crypto.price_change_percentage_24h;
                        currentPrices.bitcoin.market_cap = crypto.market_cap;
                    } else if (crypto.id === 'ethereum') {
                        currentPrices.ethereum.usd = crypto.current_price;
                        currentPrices.ethereum.usd_24h_change = crypto.price_change_percentage_24h;
                        currentPrices.ethereum.market_cap = crypto.market_cap;
                    } else if (crypto.id === 'litecoin') {
                        currentPrices.litecoin.usd = crypto.current_price;
                        currentPrices.litecoin.usd_24h_change = crypto.price_change_percentage_24h;
                        currentPrices.litecoin.market_cap = crypto.market_cap;
                    } else if (crypto.id === 'tether') {
                        currentPrices.tether.usd = crypto.current_price;
                        currentPrices.tether.usd_24h_change = crypto.price_change_percentage_24h;
                        currentPrices.tether.market_cap = crypto.market_cap;
                    }
                });
                
                // به‌روزرسانی کش
                priceCache.data = currentPrices;
                priceCache.lastUpdated = now;
                
                // به‌روزرسانی نمایش قیمت‌ها
                updatePrices(currentPrices);
                
                // به‌روزرسانی نرخ ریال هر 5 دقیقه
                if (Math.random() < 0.2) { // شبیه‌سازی به‌روزرسانی نرخ
                    rialRate = Math.floor(400000 + Math.random() * 200000);
                }
            } catch (error) {
                console.error('خطا در دریافت قیمت ارزها:', error);
                
                // استفاده از داده‌های محلی در صورت خطا
                const localData = {
                    bitcoin: {
                        usd: 30000 + Math.random() * 1000,
                        usd_24h_change: -2 + Math.random() * 4,
                        market_cap: 580000000000 + Math.random() * 10000000000
                    },
                    ethereum: {
                        usd: 2000 + Math.random() * 200,
                        usd_24h_change: -1.5 + Math.random() * 3,
                        market_cap: 240000000000 + Math.random() * 10000000000
                    },
                    litecoin: {
                        usd: 70 + Math.random() * 10,
                        usd_24h_change: -1 + Math.random() * 2,
                        market_cap: 5000000000 + Math.random() * 1000000000
                    },
                    tether: {
                        usd: 1 + (Math.random() * 0.02 - 0.01),
                        usd_24h_change: 0 + (Math.random() * 0.2 - 0.1),
                        market_cap: 83000000000 + Math.random() * 1000000000
                    },
                    irx: {
                        usd: 0,
                        usd_24h_change: 0,
                        market_cap: 0,
                        status: 'در انتظار'
                    }
                };
                
                updatePrices(localData);
            }
        }
        
        function updatePrices(currentPrices) {
            // به‌روزرسانی ویجت‌های قیمت
            updateCryptoPrice('btc', currentPrices.bitcoin, previousPrices.bitcoin);
            updateCryptoPrice('eth', currentPrices.ethereum, previousPrices.ethereum);
            updateCryptoPrice('ltc', currentPrices.litecoin, previousPrices.litecoin);
            updateCryptoPrice('usdt', currentPrices.tether, previousPrices.tether);
            updateCryptoPrice('irx', currentPrices.irx, previousPrices.irx);
            
            // به‌روزرسانی جدول قیمت‌ها
            updatePriceTable(currentPrices);
            
            // ذخیره قیمت‌های فعلی برای مقایسه بعدی
            previousPrices = currentPrices;
        }
        
        function updateCryptoPrice(prefix, current, previous) {
            const usdElement = document.getElementById(`${prefix}Usd`);
            const changeElement = document.getElementById(`${prefix}Change`);
            const rialElement = document.getElementById(`${prefix}Rial`);
            
            if (current.status === 'در انتظار') {
                if (changeElement) {
                    changeElement.textContent = current.status;
                    changeElement.className = 'crypto-change';
                    changeElement.classList.remove('positive', 'negative');
                }
                if (usdElement) usdElement.textContent = '-';
                if (rialElement) rialElement.textContent = '-';
                return;
            }
            
            // قالب‌بندی قیمت
            const formattedUsd = current.usd.toLocaleString('en-US', {
                minimumFractionDigits: 2,
                maximumFractionDigits: prefix === 'irx' ? 4 : 2
            });
            
            // قالب‌بندی تغییرات
            const change = current.usd_24h_change;
            const changeFormatted = Math.abs(change).toFixed(2);
            
            // محاسبه قیمت ریالی
            const rialPrice = (current.usd * rialRate).toLocaleString('fa-IR');
            
            // اعمال تغییرات
            if (usdElement) usdElement.textContent = formattedUsd;
            if (changeElement) {
                changeElement.textContent = `${change > 0 ? '+' : ''}${changeFormatted}%`;
                changeElement.className = 'crypto-change';
                changeElement.classList.add(change > 0 ? 'positive' : 'negative');
            }
            if (rialElement) rialElement.textContent = `${rialPrice} ریال`;
            
            // انیمیشن تغییر قیمت
            if (previous.usd > 0 && usdElement) {
                if (current.usd > previous.usd) {
                    usdElement.style.color = 'var(--positive-color)';
                    setTimeout(() => {
                        usdElement.style.color = 'inherit';
                    }, 1000);
                } else if (current.usd < previous.usd) {
                    usdElement.style.color = 'var(--negative-color)';
                    setTimeout(() => {
                        usdElement.style.color = 'inherit';
                    }, 1000);
                }
            }
        }
        
        function updatePriceTable(prices) {
            const tableBody = document.getElementById('cryptoTableBody');
            let html = '';
            
            cryptoList.forEach(crypto => {
                const data = prices[crypto.id];
                
                if (data.status === 'در انتظار') {
                    html += `
                        <tr>
                            <td>
                                <div style="display: flex; align-items: center; gap: 0.5rem;">
                                    ${crypto.icon ? `<img src="${crypto.icon}" alt="${crypto.name}" style="width: 1.5rem; height: 1.5rem;">` : `<i class="fas fa-star" style="color: var(--primary-color);"></i>`}
                                    <span>${crypto.name}</span>
                                </div>
                            </td>
                            <td>-</td>
                            <td>${data.status}</td>
                            <td>-</td>
                            <td>-</td>
                        </tr>
                    `;
                    return;
                }
                
                const change = data.usd_24h_change;
                const changeClass = change > 0 ? 'positive' : 'negative';
                const changeFormatted = `${change > 0 ? '+' : ''}${change.toFixed(2)}%`;
                const marketCap = (data.market_cap / 1000000000).toFixed(2) + 'B';
                const rialPrice = (data.usd * rialRate).toLocaleString('fa-IR');
                
                html += `
                    <tr>
                        <td>
                            <div style="display: flex; align-items: center; gap: 0.5rem;">
                                ${crypto.icon ? `<img src="${crypto.icon}" alt="${crypto.name}" style="width: 1.5rem; height: 1.5rem;">` : `<i class="fas fa-star" style="color: var(--primary-color);"></i>`}
                                <span>${crypto.name}</span>
                            </div>
                        </td>
                        <td>$${data.usd.toLocaleString('en-US', {minimumFractionDigits: 2, maximumFractionDigits: 2})}</td>
                        <td class="${changeClass}">${changeFormatted}</td>
                        <td>${rialPrice} ریال</td>
                        <td>$${marketCap}</td>
                    </tr>
                `;
            });
            
            tableBody.innerHTML = html;
        }
        
        // اولین فراخوانی و تنظیم تایمر برای به‌روزرسانی هر ثانیه
        fetchCryptoPrices();
        setInterval(fetchCryptoPrices, 1000);
        
        // نمودارهای قیمت
        function initCharts() {
            // داده‌های نمونه برای نمودارها
            const labels = Array.from({length: 24}, (_, i) => `${i}:00`);
            const btcData = Array.from({length: 24}, () => 30000 + Math.random() * 1000);
            const ethData = Array.from({length: 24}, () => 2000 + Math.random() * 200);
            
            // نمودار بیت‌کوین
            const btcCtx = document.getElementById('btcChart').getContext('2d');
            const btcChart = new Chart(btcCtx, {
                type: 'line',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'قیمت بیت‌کوین (USD)',
                        data: btcData,
                        borderColor: 'var(--primary-color)',
                        backgroundColor: 'rgba(255, 215, 0, 0.1)',
                        borderWidth: 2,
                        tension: 0.4,
                        fill: true,
                        pointRadius: 0
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        },
                        tooltip: {
                            mode: 'index',
                            intersect: false,
                            rtl: true,
                            callbacks: {
                                label: function(context) {
                                    return `قیمت: $${context.parsed.y.toLocaleString('en-US', {minimumFractionDigits: 2})}`;
                                }
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: false,
                            grid: {
                                color: 'rgba(255, 255, 255, 0.1)'
                            },
                            ticks: {
                                color: 'var(--text-color)',
                                callback: function(value) {
                                    return `$${value.toLocaleString('en-US')}`;
                                }
                            }
                        },
                        x: {
                            grid: {
                                color: 'rgba(255, 255, 255, 0.1)'
                            },
                            ticks: {
                                color: 'var(--text-color)'
                            }
                        }
                    }
                }
            });
            
            // نمودار اتریوم
            const ethCtx = document.getElementById('ethChart').getContext('2d');
            const ethChart = new Chart(ethCtx, {
                type: 'line',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'قیمت اتریوم (USD)',
                        data: ethData,
                        borderColor: '#627EEA',
                        backgroundColor: 'rgba(98, 126, 234, 0.1)',
                        borderWidth: 2,
                        tension: 0.4,
                        fill: true,
                        pointRadius: 0
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        },
                        tooltip: {
                            mode: 'index',
                            intersect: false,
                            rtl: true,
                            callbacks: {
                                label: function(context) {
                                    return `قیمت: $${context.parsed.y.toLocaleString('en-US', {minimumFractionDigits: 2})}`;
                                }
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: false,
                            grid: {
                                color: 'rgba(255, 255, 255, 0.1)'
                            },
                            ticks: {
                                color: 'var(--text-color)',
                                callback: function(value) {
                                    return `$${value.toLocaleString('en-US')}`;
                                }
                            }
                        },
                        x: {
                            grid: {
                                color: 'rgba(255, 255, 255, 0.1)'
                            },
                            ticks: {
                                color: 'var(--text-color)'
                            }
                        }
                    }
                }
            });
            
            // به‌روزرسانی نمودارها هر دقیقه
            setInterval(() => {
                btcChart.data.datasets[0].data = btcChart.data.datasets[0].data.slice(1).concat(30000 + Math.random() * 1000);
                btcChart.update();
                
                ethChart.data.datasets[0].data = ethChart.data.datasets[0].data.slice(1).concat(2000 + Math.random() * 200);
                ethChart.update();
            }, 60000);
        }
        
        // دکمه بازگشت به بالا
        const backToTop = document.getElementById('backToTop');
        
        window.addEventListener('scroll', () => {
            if (window.pageYOffset > 300) {
                backToTop.classList.add('visible');
            } else {
                backToTop.classList.remove('visible');
            }
        });
        
        backToTop.addEventListener('click', () => {
            window.scrollTo({
                top: 0,
                behavior: 'smooth'
            });
        });
        
        // اسکرول نرم برای لینک‌ها
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function(e) {
                e.preventDefault();
                
                const targetId = this.getAttribute('href');
                if (targetId === '#') return;
                
                const targetElement = document.querySelector(targetId);
                if (targetElement) {
                    targetElement.scrollIntoView({
                        behavior: 'smooth'
                    });
                    
                    // بستن منو در حالت موبایل
                    menuToggle.classList.remove('active');
                    mainMenu.classList.remove('active');
                }
            });
        });
        
        // انیمیشن‌های اسکرول
        AOS.init({
            duration: 800,
            easing: 'ease-in-out',
            once: true,
            offset: 100
        });
        
        // ذرات پس‌زمینه
        particlesJS('particles-js', {
            "particles": {
                "number": {
                    "value": 80,
                    "density": {
                        "enable": true,
                        "value_area": 800
                    }
                },
                "color": {
                    "value": "#FFD700"
                },
                "shape": {
                    "type": "circle",
                    "stroke": {
                        "width": 0,
                        "color": "#000000"
                    },
                    "polygon": {
                        "nb_sides": 5
                    }
                },
                "opacity": {
                    "value": 0.5,
                    "random": true,
                    "anim": {
                        "enable": true,
                        "speed": 1,
                        "opacity_min": 0.1,
                        "sync": false
                    }
                },
                "size": {
                    "value": 3,
                    "random": true,
                    "anim": {
                        "enable": true,
                        "speed": 2,
                        "size_min": 0.1,
                        "sync": false
                    }
                },
                "line_linked": {
                    "enable": true,
                    "distance": 150,
                    "color": "#FFD700",
                    "opacity": 0.4,
                    "width": 1
                },
                "move": {
                    "enable": true,
                    "speed": 1,
                    "direction": "none",
                    "random": true,
                    "straight": false,
                    "out_mode": "out",
                    "bounce": false,
                    "attract": {
                        "enable": false,
                        "rotateX": 600,
                        "rotateY": 1200
                    }
                }
            },
            "interactivity": {
                "detect_on": "canvas",
                "events": {
                    "onhover": {
                        "enable": true,
                        "mode": "grab"
                    },
                    "onclick": {
                        "enable": true,
                        "mode": "push"
                    },
                    "resize": true
                },
                "modes": {
                    "grab": {
                        "distance": 140,
                        "line_linked": {
                            "opacity": 1
                        }
                    },
                    "bubble": {
                        "distance": 400,
                        "size": 40,
                        "duration": 2,
                        "opacity": 8,
                        "speed": 3
                    },
                    "repulse": {
                        "distance": 200,
                        "duration": 0.4
                    },
                    "push": {
                        "particles_nb": 4
                    },
                    "remove": {
                        "particles_nb": 2
                    }
                }
            },
            "retina_detect": true
        });
        
        // بارگذاری اولیه
        window.addEventListener('load', () => {
            initCharts();
        });
    </script>
</body>
